<!--pages/wyy/play.wxml-->
<template name="play">
<view class="content-play">
<view class="content-play-info">
<text>{{play.name}}</text>
<view>——{{play.ar.name}}——</view>
</view>
<view class="content-play-cover">
 <image src="{{play.al.picUrl}}" style="animation-play-state:{{state}}"></image>
</view>
<slider activeColor="#d33a31" block-size="12" backgroundColor="#dadada" value="{{duration}}"></slider>
</view>
</template>